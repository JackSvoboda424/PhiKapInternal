@{
    ViewData["Title"] = "Chapter History";
}

<h1>Test</h1>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<body>

    <div style="width:800px"><canvas id="myChart"></canvas></div>

</body>



<script>
    // Data for the chart
    const years = ['2018', '2019', '2020', '2021', '2022', '2023', '2024'];
    const menCount = [60, 72, 57, 62, 60, 52, 64];

    // Configuration for the chart
    const config = {
        type: 'line',
        data: {
            labels: years,
            datasets: [{
                label: 'Number of Men Living in the House',
                data: menCount,
                fill: false,
                borderColor: 'rgb(75, 192, 192)',
                tension: 0.1
            }]
        },
        options: {
            scales: {
                x: {
                    title: {
                        display: true,
                        text: 'Year'
                    }
                },
                y: {
                    title: {
                        display: true,
                        text: 'Number of Men'
                    },
                    beginAtZero: true
                }
            }
        }
    };

    // Create the chart
    var myChart = new Chart(
        document.getElementById('myChart'),
        config
    );
</script>