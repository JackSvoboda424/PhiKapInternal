@model PhiKapInternal.Models.PKT_Internal.Member

<body>
    <h2>PhiKap Internal Login</h2>

    <div class="row"> 
        <div class="col-mid-4">
            <form asp-action="Login">
                <div class="form-group">
                    <p> <strong> Enter your username: </strong></p>
                    <input asp-for="Name" class="form-control" id="usernameInput" required/>
                </div>

                <div class="form-group">
                    <p> <strong> Enter your password: </strong></p>
                    <input asp-for="Password" class="form-control" id="passwordInput" required />
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>

